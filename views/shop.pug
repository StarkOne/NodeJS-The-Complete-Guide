extends layouts/main-layouts.pug

block styles
        link(rel="stylesheet", href="/css/product.css")

block content
        main
          if prods.length > 0
            .grid
              each product in prods
                article.card.product-item
                  header.card__header
                    h1.product__title #{product.title}
                  div.card__image
                    img(src="http://placehold.it/150x150/b0b0b0", alt="img")
                  div.card__content
                    p.product__price $19.99
                    p.product__description Book description
                  div.card__actions
                    button.btn Add to Cart
          else
            h1 No products